{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": false, // strict mode
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": true, // Erreur si une variable n'a pas de type explicite
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true, // Force la coh√©rence de la casse dans les noms de fichiers
    "noFallthroughCasesInSwitch": false
  }
}
